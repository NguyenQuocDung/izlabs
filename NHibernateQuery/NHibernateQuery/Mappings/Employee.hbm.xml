<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NHibernateQuery"
                   namespace="NHibernateQuery.Domain">

  <class name="Employee">
    <id name="Id">
      <generator class="guid" />
    </id>
    <property name="Name" />
    <property name="Salary" />
    <property name="Age" />
  </class>

</hibernate-mapping>